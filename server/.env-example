# Database settings
DB_HOST=your_host           # e.g., localhost or db.example.com
DB_PORT=your_port           # e.g., 5432
DB_USER=your_user           # database username
DB_PASS=your_password       # database password
DB_NAME=your_database       # database name

# Email settings
EMAIL_NAME=your_email       # email address for sending emails
EMAIL_PASS=your_email_password  # password or app-specific password

# JWT / Security
JWT_KEY=your_jwt_key        # secret key for JWT tokens

# Redis (optional)
REDIS_URL=your_redis_url    # e.g., redis://localhost:6379